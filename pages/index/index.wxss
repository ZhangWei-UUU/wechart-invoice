/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 0rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.card-index {
  box-shadow: 0 8px 10px rgba(0, 0, 0, 0.1);
  width: 80%;
  margin:10 auto;
  height: 200px;
  border-radius: 12px;
  margin-bottom: 20px;
}

.card-index image {
  width: 100%;
  height: 140px;
  border-radius: 12px 12px 0 0;
}

.card-text {
  padding: 3px 20px
}